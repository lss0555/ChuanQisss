<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/red"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="手机绑定"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:onClick="back"
            android:layout_width="wrap_content"
            android:background="@mipmap/g_fanhui"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/img_account"
            android:layout_width="wrap_content"
            android:background="@mipmap/g_shurushoujihao"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_phone"
            android:layout_toLeftOf="@+id/tv_send"
            android:layout_toRightOf="@+id/img_account"
            android:layout_marginLeft="20dp"
            android:hint="请输入您的手机号码"
            android:layout_width="match_parent"
            android:inputType="number"
            android:background="@null"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_send"
            android:layout_width="90dp"
            android:background="@drawable/round_red_bg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="获取验证码"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_height="30dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.2dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/img_yzm"
            android:layout_width="wrap_content"
            android:background="@mipmap/g_yanzhengma"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_yzm"
            android:layout_toRightOf="@+id/img_yzm"
            android:layout_marginLeft="20dp"
            android:hint="请输入验证码"
            android:layout_width="wrap_content"
            android:inputType="number"
            android:maxEms="6"
            android:background="@null"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.2dp"></View>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.2dp"></View>
    <RelativeLayout
        android:id="@+id/rtl_complite"
        android:layout_width="match_parent"
        android:background="@drawable/round_red_bg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
