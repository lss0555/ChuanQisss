<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee"
    android:layout_height="match_parent"
    tools:context="Fragments.GetFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/red"
            android:layout_height="150dp">
            <Views.CircleImageView
                android:id="@+id/img_icons"
                android:layout_width="120dp"
                app:border_width="1dp"
                android:src="@mipmap/ic_launcher"
                app:border_color="@color/gray"
                android:layout_centerInParent="true"
                android:layout_height="120dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/red"
            android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_isbind"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:text="ID:132132"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="110dp">
            <RelativeLayout
                android:id="@+id/rtl_person_info"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@color/white"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="个人资料"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp"
                android:background="@color/white"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="消息提醒"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_unread"
                        android:layout_width="wrap_content"
                        android:textColor="@color/dark_gray"
                        android:textSize="14sp"
                        android:text="未读消息"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/tv_unread"
                        android:text="5条"
                        android:textColor="@color/red"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rtl_bind_phone"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="手机绑定"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_bind_phone_state"
                    android:layout_width="wrap_content"
                    android:text="未绑定"
                    android:textColor="@color/dark_gray"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="110dp">
            <RelativeLayout
                android:id="@+id/rtl_wx"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@color/white"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="微信绑定"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_isbind_wx"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/dark_gray"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rtl_alipay"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp"
                android:background="@color/white"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="支付宝绑定"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_isbind_alipay"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/dark_gray"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rtl_detail_get"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="明细收益"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="110dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@color/white"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="意见反馈"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rtl_update"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp"
                android:background="@color/white"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="检查更新"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="已是最新版本"
                    android:textSize="14sp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/dark_gray"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rtl_about_ours"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="2.5dp"
                android:layout_marginLeft="2.5dp"
                android:background="@color/white"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="关于我们"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
