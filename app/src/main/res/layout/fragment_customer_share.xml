<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.Share.CustomerShareFragment">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="90dp">
         <ImageView
             android:layout_width="wrap_content"
             android:background="@mipmap/yz_logo"
             android:layout_centerInParent="true"
             android:layout_height="wrap_content" />
     </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="250dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/customer"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rtl_customer"
        android:layout_width="match_parent"
        android:background="@drawable/round_red_bg"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_gravity="center"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@drawable/white2gray_seleclor"
            android:textSize="17sp"
            android:text="预览定制版邀请函"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rtl_yq"
        android:layout_width="match_parent"
        android:background="@drawable/round_red_bg"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_gravity="center"
        android:layout_height="40dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_centerInParent="true"
             android:textColor="@drawable/white2gray_seleclor"
             android:textSize="17sp"
             android:text="邀请好友"
             android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
