<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:background="@color/red"
        android:layout_height="20dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/red"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="新手任务"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rtl_back"
            android:layout_width="60dp"
            android:onClick="back"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@mipmap/g_fanhui"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rtl_known_platform"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <ImageView
                    android:id="@+id/img_lj"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/x_liaojie"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_toRightOf="@+id/img_lj"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="一步了解平台收益"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rtl_ljpt_state"
                    android:layout_width="80dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round_red_bg"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_height="35dp">
                    <TextView
                        android:id="@+id/tv_ljpt_state"
                        android:layout_width="wrap_content"
                        android:text="+0.3元"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_height="1dp"></View>
            <RelativeLayout
                android:id="@+id/rtl_bind_wx"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <ImageView
                    android:id="@+id/img_wx"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/bangdingweixin"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_toRightOf="@+id/img_wx"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="点击绑定微信方便资金提现"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:text="实现微信登录"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:text="立即获得0.5元奖励"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round_red_bg"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="+0.5元"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_height="1dp"></View>
            <RelativeLayout
                android:id="@+id/rtl_bind_alipay"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <ImageView
                    android:id="@+id/img_alipay"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/x_zhifu"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_toRightOf="@+id/img_alipay"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="绑定支付宝"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rtl_bindalipays"
                    android:layout_width="80dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round_red_bg"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_height="35dp">
                    <TextView
                        android:id="@+id/tv_bind_alipay_state"
                        android:layout_width="wrap_content"
                        android:text="+0.5元"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_height="1dp"></View>
            <RelativeLayout
                android:id="@+id/rtl_bind_phone"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <ImageView
                    android:id="@+id/img_phone"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/x_shouji"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_toRightOf="@+id/img_phone"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:text="手机绑定"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rtl_bindphones"
                    android:layout_width="80dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round_red_bg"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_height="35dp">
                <TextView
                    android:id="@+id/tv_bind_phone_state"
                    android:layout_width="wrap_content"
                    android:text="+0.5元"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_height="1dp"></View>
            <RelativeLayout
                android:id="@+id/rtl_share"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/x_fenxiang"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_toRightOf="@+id/img_share"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="分享到微信好友,朋友圈等"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round_red_bg"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="+0.5元"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_height="1dp"></View>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
