<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
  <RelativeLayout
      android:layout_width="match_parent"
      android:background="@color/red"
      android:layout_height="50dp">
      <TextView
          android:layout_width="wrap_content"
          android:text="提现"
          android:textColor="@color/white"
          android:textSize="20sp"
          android:layout_centerInParent="true"
          android:layout_height="wrap_content" />
      <RelativeLayout
          android:id="@+id/rtl_back"
          android:layout_width="60dp"
          android:onClick="back"
          android:layout_height="match_parent">
          <ImageView
              android:layout_width="wrap_content"
              android:background="@mipmap/g_fanhui"
              android:layout_centerInParent="true"
              android:layout_height="wrap_content" />
      </RelativeLayout>
  </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_ky"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="您当前的可用余额:"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_toRightOf="@+id/tv_ky"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="@color/red"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:text="100.00"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/tv_price"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:text="元"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.2dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="60dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/tv_tx"
            android:layout_width="wrap_content"
            android:text="提现金额"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/tv_tx"
            android:hint="输入金额"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:inputType="number"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.2dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/tv_select"
            android:layout_width="wrap_content"
            android:text="请选择提款方式"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="(默认为微信提现)"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_select"
            android:textSize="15sp"
            android:textColor="@color/darks_gray"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.2dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <RadioButton
            android:id="@+id/rb_wxpay"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:button="@null"
            android:background="@drawable/radiobutton_selector"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_wx"
            android:layout_width="wrap_content"
            android:text="微信提现"
            android:layout_toRightOf="@+id/rb_wxpay"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="(一秒到账)"
            android:textColor="@color/darks_gray"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/tv_wx"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.2dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <RadioButton
            android:id="@+id/rb_alipay"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:button="@null"
            android:background="@drawable/radiobutton_selector"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_alipay"
            android:layout_width="wrap_content"
            android:text="支付宝人工提现"
            android:layout_toRightOf="@+id/rb_alipay"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="(1-3个工作日到账)"
            android:textColor="@color/darks_gray"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/tv_alipay"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.2dp"></View>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="45dp">
    <RadioButton
        android:id="@+id/rb_phone"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:button="@null"
        android:background="@drawable/radiobutton_selector"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:text="话费充值"
        android:layout_toRightOf="@+id/rb_phone"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="(5个工作日到账)"
        android:textColor="@color/darks_gray"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/tv_phone"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.2dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <RadioButton
            android:id="@+id/rb_into_jqz"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:button="@null"
            android:background="@drawable/radiobutton_selector"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="转入聚钱庄"
            android:layout_toRightOf="@+id/rb_into_jqz"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.2dp"></View>
    <RelativeLayout
        android:id="@+id/rtl_complite"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_red_bg"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="完成"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@drawable/white2gray_seleclor"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
