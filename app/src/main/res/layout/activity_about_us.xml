<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="Fragments.GetFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/red"
        android:layout_height="70dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="关于我们"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:id="@+id/textView"
            android:paddingTop="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <RelativeLayout
            android:id="@+id/rtl_back"
            android:layout_width="60dp"
            android:layout_marginTop="20dp"
            android:onClick="back"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@mipmap/g_fanhui"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/tv_text_qqun"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_empty"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_banben"
            android:text="版本号："
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:text="更新时间:2016-10-24"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="我们联系方式"
            android:textColor="@color/red"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:text="QQ客服：2881583619"
           android:textColor="@color/black"
           android:textSize="16sp"
           android:layout_height="wrap_content" />
        <TextView
           android:layout_width="wrap_content"
           android:text="易钻邮箱：chuanqi@yzatm.com"
           android:textColor="@color/black"
            android:layout_marginTop="5dp"
           android:textSize="16sp"
           android:layout_height="wrap_content" />
        <TextView
           android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
           android:text="微信公众号：yzatm88"
           android:textColor="@color/black"
           android:textSize="16sp"
           android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <ImageView
             android:id="@+id/img_qrcode"
             android:layout_width="150dp"
             android:layout_margin="10dp"
             android:scaleType="fitXY"
             android:layout_centerInParent="true"
             android:layout_height="150dp" />
    </RelativeLayout>
</LinearLayout>
