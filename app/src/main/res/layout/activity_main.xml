<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/linearLayout1"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout1">
            <Views.UnSlideViewPager
                android:id="@+id/vp_tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </Views.UnSlideViewPager>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:background="#55000000"
                android:layout_height="1dp"></View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#dddddd"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_height="50dp"
               >
                <RelativeLayout
                    android:id="@+id/rtl_home"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_home"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="首页"
                        android:drawableTop="@mipmap/ic_home1"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rtl_get"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_get"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:drawableTop="@mipmap/ic_get"
                        android:text="返利"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rtl_share"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_share"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:drawableTop="@mipmap/ic_get"
                        android:text="分享"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rtl_mine"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_mine"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="我的"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:drawableTop="@mipmap/ic_mine"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
