<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:background="@color/red"
        android:layout_height="20dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/red"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="邀请赚钱"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:onClick="back"
            android:layout_width="wrap_content"
            android:background="@mipmap/g_fanhui"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"

           android:layout_height="50dp">
           <RelativeLayout
               android:id="@+id/rtl_photo"
               android:layout_width="match_parent"
               android:layout_weight="1"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/tv_photo"
                   android:layout_width="wrap_content"
                   android:text="图片版"
                   android:layout_centerInParent="true"
                   android:textSize="17sp"
                   android:textColor="@drawable/red2gray_seleclor"
                   android:layout_height="wrap_content" />
           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/rtl_customer"
               android:layout_width="match_parent"
               android:layout_weight="1"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/tv_customer"
                   android:layout_width="wrap_content"
                   android:text="定制版"
                   android:layout_centerInParent="true"
                   android:textSize="17sp"
                   android:textColor="@drawable/black2gray_seleclor"
                   android:layout_height="wrap_content" />
           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/rtl_show_order"
               android:layout_width="match_parent"
               android:layout_weight="1"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/tv_show_order"
                   android:layout_width="wrap_content"
                   android:text="晒单版"
                   android:layout_centerInParent="true"
                   android:textSize="17sp"
                   android:textColor="@drawable/black2gray_seleclor"
                   android:layout_height="wrap_content" />
           </RelativeLayout>
       </LinearLayout>
       <FrameLayout
           android:id="@+id/fl_main"
           android:layout_width="match_parent"
           android:layout_weight="1"
           android:layout_height="match_parent">
       </FrameLayout>
   </LinearLayout>
</LinearLayout>
