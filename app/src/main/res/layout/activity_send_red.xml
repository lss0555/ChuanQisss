<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:background="@color/red"
        android:layout_height="20dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/red"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="发红包到红包池"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rtl_back"
            android:layout_width="60dp"
            android:onClick="back"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@mipmap/g_fanhui"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="bottom|center"
            android:layout_height="45dp">
            <RadioButton
                android:id="@+id/rb_100"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:button="@null"
                android:background="@drawable/radiobutton_selector"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="100元"
                android:layout_toRightOf="@+id/rb_100"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center|bottom"
            android:layout_height="45dp">
            <RadioButton
                android:id="@+id/rb_200"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:button="@null"
                android:background="@drawable/radiobutton_selector"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="500元"
                android:layout_toRightOf="@+id/rb_200"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:textSize="17sp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="普通红包"
                android:layout_centerVertical="true"
                android:paddingLeft="18dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="超级红包"
                android:paddingLeft="18dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.2dp"></View>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.2dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="2dp">
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.2dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <RadioButton
            android:id="@+id/rb_yizuyan"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:button="@null"
            android:background="@drawable/radiobutton_selector"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="易赚ATM红包支付"
            android:layout_toRightOf="@+id/rb_yizuyan"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_yizuan"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.2dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <RadioButton
            android:id="@+id/rb_yue"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radiobutton_selector"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="账户余额支付"
            android:layout_toRightOf="@+id/rb_yue"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_yue"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.2dp"></View>
    <RelativeLayout
        android:id="@+id/rtl_wxpay"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <RadioButton
            android:id="@+id/rb_wxin"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/radiobutton_selector"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:text="微信支付"
            android:layout_toRightOf="@+id/rb_wxin"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.2dp"></View>
    <RelativeLayout
        android:id="@+id/rtl_alipay"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <RadioButton
            android:id="@+id/rb_alipay"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/radiobutton_selector"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="支付宝支付"
            android:layout_toRightOf="@+id/rb_alipay"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="0.2dp"></View>
    <RelativeLayout
        android:id="@+id/rtl_pay"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_red_bg"

        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="立即支付"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="@drawable/white2gray_seleclor"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rtl_update"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_red_bg"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="会员升级"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="@drawable/white2gray_seleclor"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
